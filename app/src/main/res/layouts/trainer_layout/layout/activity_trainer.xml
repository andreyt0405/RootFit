<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trainer.TrainerActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout_trainer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/trainer_home_page"
            android:text="Home"
            android:icon="@drawable/ic_action_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/trainer_training_page"
            android:icon="@drawable/ic_action_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Training" />

        <com.google.android.material.tabs.TabItem
            android:icon="@drawable/ic_action_conclusion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Training Over" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_trainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tablayout_trainer"
        android:layout_marginBottom="3dp" >
    </androidx.viewpager.widget.ViewPager>
</RelativeLayout>