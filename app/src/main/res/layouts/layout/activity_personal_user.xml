<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#27699ABF"
    android:padding="30dp"
    tools:context=".PersonalUserActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/upload_profile_trainee"
        android:paddingBottom="20dp"
        android:onClick="uploadProfileImage"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:civ_border_color="#9FBDD2"
        app:civ_border_width="2dp"
        android:src="@mipmap/avatar"/>

    <TextView
        android:id="@+id/personal_welcome_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="14pt"
        android:text="@string/app_name"/>

    <ListView
        android:id="@+id/personal_info_list"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:layout_below="@id/upload_profile_trainee"/>
    <LinearLayout
        android:id="@+id/personal_area_button_layout"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/personal_info_list">
        <Button
            android:layout_marginRight="15dp"
            android:onClick="userRestPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="6pt"
            android:layout_below="@id/save_data_trinee"
            android:layout_alignParentStart="true"
            android:backgroundTint="@color/blue_low_opacity"
            android:text="@string/prompt_reset_password"
            android:background="@drawable/radius_rest_pass_button"/>
        <Button
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:onClick="changerUserVerificationAddress"
            android:layout_below="@id/save_data_trinee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="6pt"
            android:backgroundTint="@color/purple_low_opacity"
            android:text="@string/prompt_change_email"
            android:background="@drawable/radius_rest_pass_button"/>
        <Button
            android:onClick="removeUserFireBaseAccount"
            android:layout_below="@id/save_data_trinee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="6pt"
            android:backgroundTint="@color/red_low_opacity"
            android:text="@string/prompt_remove_account"
            android:background="@drawable/radius_rest_pass_button"/>
    </LinearLayout>
    <Button
        android:id="@+id/save_data_trinee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_area_button_layout"
        android:layout_alignEnd="@+id/personal_area_button_layout"
        android:layout_alignStart="@+id/personal_area_button_layout"
        android:layout_marginTop="15dp"
        android:backgroundTint="#C18BC34A"
        android:background="@drawable/radius_rest_pass_button"
        android:onClick="saveDataInFireBaseAndShared"
        android:text="@string/prompt_save_data" />
</RelativeLayout>